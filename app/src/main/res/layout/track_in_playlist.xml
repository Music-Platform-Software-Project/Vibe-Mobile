<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bcg"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:id="@+id/trackRow"
    >

    <ImageView
        android:id="@+id/trackImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/vibe_logo_2"
        android:background="@drawable/square_bcg"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/trackName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Playlist name"
        android:textSize="26sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/trackArtist"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="@color/hint_color"
        android:text="Artist1, Artist2, Artist3"
        android:textSize="10sp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/trackDuration"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_color"
            android:textSize="10sp"
            android:text="1.30"
            android:layout_marginRight="10dp"
            android:gravity="end"
            />

        <TextView
            android:id="@+id/trackRating"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_color"
            android:text="â˜… 4.8/5"
            android:textSize="10sp"
            android:gravity="end"/>




    </LinearLayout>








</LinearLayout>